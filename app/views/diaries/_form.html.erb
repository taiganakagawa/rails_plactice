<%= form_with(model: diary, local: true) do |form| %>
  <% if diary.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(diary.errors.count, "error") %> prohibited this diary from being saved:</h2>

      <ul>
      <% diary.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label>タイトル</label>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <label>本文</label>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <label>感情</label>
    <label><%= form.radio_button :emotion, "喜" %>喜</label>
    <label><%= form.radio_button :emotion, "怒" %>怒</label>
    <label><%= form.radio_button :emotion, "哀" %>哀</label>
    <label><%= form.radio_button :emotion, "楽" %>楽</label>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
